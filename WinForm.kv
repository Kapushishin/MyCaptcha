<MyCaptcha>:
    button_attempt: button_attempt
    button_reset: button_reset
    image1: image1
    button1: button1
    cols: 1
    rows: 3
    Label:
        text: 'Select image with\n!Something!'
        halign: 'center'
        valign: 'middle'
        color: 0, 0, 0, 1
        size_hint: 1, .2
        font_size: 18
    GridLayout:
        cols: 2
        rows: 2
        padding: 10
        spacing: 2
        Button:
            id: button1
            on_press: root.click_holder()
            AsyncImage:
                id: image1
                source: root.imgs[0]
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
        Button:
            id: button2
            on_press: root.click_holder()
            AsyncImage:
                id: image2
                source: root.imgs[1]
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
        Button:
            id: button3
            on_press: root.click_holder()
            AsyncImage:
                id: image3
                source: root.imgs[2]
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
        Button:
            id: button4
            on_press: root.click_holder()
            AsyncImage:
                id: image4
                source: root.imgs[3]
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
    Label:
        size_hint: 1, .25
        Button:
            id: button_attempt
            text: 'Attempt'
            font_size: 16
            width: 100
            height: 50
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .51, .88, .67, 1
            pos: 170, 10
            on_press: root.press_button_attempt()
        Button:
            id: button_reset
            text: 'Reset'
            font_size: 16
            width: 100
            height: 50
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .51, .88, .67, 1
            pos: 280, 10