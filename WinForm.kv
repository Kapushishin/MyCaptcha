<MyCaptcha>:
    button_attempt: button_attempt
    button_reset: button_reset
    cols: 1
    rows: 3
    Label:
        text: 'Select image with\n!Something!'
        halign: 'center'
        valign: 'middle'
        color: 0, 0, 0, 1
        size_hint: 1, .2
        font_size: 18
    GridLayout:
        cols: 2
        rows: 2
        Button:
            text: '1'
        Button:
            text: '2'
        Button:
            text: '3'
        Button:
            text: '4'
    Label:
        size_hint: 1, .25
        Button:
            id: button_attempt
            text: 'Attempt'
            font_size: 16
            width: 100
            height: 50
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .51, .88, .67, 1
            pos: 170, 10
        Button:
            id: button_reset
            text: 'Reset'
            font_size: 16
            width: 100
            height: 50
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: .51, .88, .67, 1
            pos: 280, 10